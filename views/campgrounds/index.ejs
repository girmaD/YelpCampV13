<div class="container">
	<header class="jumbotron">
		<div class="container">	
			<h1 class="display-4 text-center">Welcome to Yelpcamp</h1>		 
			<p class="text-center">View our hand-picked campgrounds from all around the world.</p>
			<hr class="my-4">
			<p>
				<a class="btn btn-lg" href = "/campgrounds/new">Add A New Campground</a>
			</p>
		</div>
	</header>
	<div class="row">
		<div class="col-lg-12">
			<p>Our Most Popular Campgrounds</p>
		</div>
	</div>
	
	<div class="card-text-center d-flex flex-wrap ">
			<% campgrounds.forEach(function(campground){ %>
				<div class="col-md-3 col-sm-6 float-left ml-3 mt-3 mb-4">	
					<div class="card " style="width: 100%; height: 300px;">
						<img style="width: 100%; height: 200px;" class="img" src ="<%= campground.image %>">	
						<div class="caption text-center">
							<h4><%= campground.name %></h4>
						</div>
						<p class="text-center">
						  <a class="btn btn-primary" href="/campgrounds/<%=campground._id %>">More Info</a>
						</p>
					</div>
				</div>
			<% }) %>
		</div>	
</div>
